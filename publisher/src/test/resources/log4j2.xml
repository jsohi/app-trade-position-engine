<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %msg%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="${sys:LOG_LEVEL:-INFO}">
            <AppenderRef ref="STDOUT"/>
        </Root>
    </Loggers>
</Configuration>
